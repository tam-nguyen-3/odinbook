<div class="max-w-md mx-auto mt-12 px-4 space-y-8">
  <h2 class="text-2xl font-bold text-gray-800 text-center">Edit <%= resource_name.to_s.humanize %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "space-y-6 bg-white p-6 rounded-lg shadow-sm border border-gray-200" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <!-- Name -->
    <div>
      <%= f.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :name, required: true, autofocus: true, placeholder: "Name", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
    </div>

    <!-- Avatar -->
    <div>
      <%= f.label :avatar, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.file_field :avatar, class: "block w-full text-sm text-gray-700" %>
    </div>

    <!-- Email -->
    <div>
      <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div class="text-sm text-yellow-600">
        Currently waiting confirmation for: <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <!-- Password -->
    <div>
      <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <p class="text-xs text-gray-500 mb-1">(leave blank if you don't want to change it)</p>
      <%= f.password_field :password, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
      <% if @minimum_password_length %>
        <p class="text-xs text-gray-400 mt-1"><%= @minimum_password_length %> characters minimum</p>
      <% end %>
    </div>

    <!-- Password Confirmation -->
    <div>
      <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
    </div>

    <!-- Current Password -->
    <div>
      <%= f.label :current_password, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <p class="text-xs text-gray-500 mb-1">(we need your current password to confirm your changes)</p>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
    </div>

    <!-- Submit -->
    <div>
      <%= f.submit "Update", class: "w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition text-sm font-medium" %>
    </div>
  <% end %>

  <!-- Cancel Account -->
  <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
    <h3 class="text-md font-semibold text-red-700 mb-2">Cancel my account</h3>
    <p class="text-sm text-gray-600 mb-3">Unhappy? You can delete your account below.</p>
    <%= button_to "Cancel my account",
        registration_path(resource_name),
        data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" },
        method: :delete,
        class: "w-full bg-red-600 text-white py-2 px-4 rounded-md hover:bg-red-700 transition text-sm font-medium"
    %>
  </div>

  <!-- Back link -->
  <div class="text-center mt-4">
    <%= link_to "← Back", :back, class: "text-blue-600 text-sm hover:underline" %>
  </div>
</div>
