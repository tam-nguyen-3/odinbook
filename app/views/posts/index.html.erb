<%= render "shared/navbar" %>

<!-- Main Content -->
<div class="space-y-6 max-w-2xl mx-auto mt-8 px-4">
  <!-- Create Post Button -->
  <div>
    <%= link_to "+ Create a Post", new_post_path, class: "inline-block bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition" %>
  </div>

  <!-- Posts List -->
  <div class="space-y-4">
    <% @posts.each do |post| %>
      <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition">
        <% if user_signed_in? %>
          <p class="text-xs text-gray-500 mb-1">
            <strong>By:</strong> <%= post.user.email %>
          </p>
        <% end %>
        <p class="text-gray-800 text-sm mb-2"><%= post.content %></p>
        <%= link_to "ðŸ’¬ View Thread", post_path(post), class: "text-blue-600 text-sm hover:underline" %>
      </div>
    <% end %>
  </div>
</div>
