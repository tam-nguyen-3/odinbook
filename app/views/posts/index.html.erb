<!-- Top Navigation -->
<div class="mx-auto max-w-5xl p-4 flex justify-between items-center border-b border-gray-200">
  <span class="font-bold text-2xl text-gray-800 tracking-tight">Tho ret ci ti</span>
  <div class="flex items-center space-x-4 text-sm">
    <%= link_to "Viewing Users", users_path, class: "text-gray-700 hover:text-blue-600 transition" %>
    <%= link_to current_user.name, user_path(current_user), class: "text-gray-700 hover:text-blue-600 transition" %>
    <% if user_signed_in? %>
      <%= link_to "Log out", destroy_user_session_path, data: { turbo_method: :delete }, class: "text-red-500 hover:text-red-600 transition" %>
    <% else %>
      <%= link_to "Log in", new_user_session_path, class: "text-blue-600 hover:underline" %>
    <% end %>
  </div>
</div>

<!-- Main Content -->
<div class="space-y-6 max-w-2xl mx-auto mt-8 px-4">
  <!-- Create Post Button -->
  <div>
    <%= link_to "+ Create a Post", new_post_path, class: "inline-block bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-blue-700 transition" %>
  </div>

  <!-- Posts List -->
  <div class="space-y-4">
    <% @posts.each do |post| %>
      <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200 hover:shadow-md transition">
        <% if user_signed_in? %>
          <p class="text-xs text-gray-500 mb-1">
            <strong>By:</strong> <%= post.user.email %>
          </p>
        <% end %>
        <p class="text-gray-800 text-sm mb-2"><%= post.content %></p>
        <%= link_to "ðŸ’¬ View Thread", post_path(post), class: "text-blue-600 text-sm hover:underline" %>
      </div>
    <% end %>
  </div>
</div>
