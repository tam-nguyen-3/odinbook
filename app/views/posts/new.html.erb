<%= render "shared/navbar" %>
<%= render "shared/back_to_feed" %>

<div class="max-w-2xl mx-auto mt-10 px-4">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Create a New Post</h1>

  <%= form_with model: @post, class: "space-y-6 bg-white p-6 rounded-lg shadow-sm border border-gray-200" do |form| %>
    <!-- Content Field -->
    <div>
      <%= form.label :content, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :content, rows: 5, class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 text-sm" %>
    </div>

    <!-- Submit Button -->
    <div>
      <%= form.submit "Post", class: "bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-blue-700 transition" %>
    </div>
  <% end %>
</div>
