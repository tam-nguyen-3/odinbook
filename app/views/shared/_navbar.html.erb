<div class="mx-auto max-w-5xl p-4 flex justify-between items-center border-b border-gray-200">
  <span class="font-bold text-2xl text-gray-800 tracking-tight">Tho ret ci ti</span>
  <div class="flex items-center space-x-4 text-sm">
    <%= link_to "Viewing Users", users_path, class: "text-gray-700 hover:text-blue-600 transition" %>
    <%= link_to current_user.name, user_path(current_user), class: "text-gray-700 hover:text-blue-600 transition" %>
