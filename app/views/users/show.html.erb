<div class="max-w-3xl mx-auto mt-10 px-4 space-y-8">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold text-gray-800">Profile</h1>
    <%= link_to "← Back to feed", posts_path, class: "text-blue-600 hover:underline text-sm" %>
  </div>

  <div class="bg-white p-6 rounded-lg shadow-sm border border-gray-200">
    <h1 class="text-2xl font-bold text-gray-800 mb-2"><%= @user.name %></h1>
    <p class="text-sm text-gray-600 mb-4"><%= @user.email %></p>
    <div class="flex space-x-6 text-sm text-gray-700">
      <span><strong><%= @user.followers.count %></strong> Followers</span>
      <span><strong><%= @user.following.count %></strong> Following</span>
    </div>
  </div>

  <div class="space-y-4">
    <h2 class="text-xl font-semibold text-gray-800">Posts by <%= @user.name %></h2>

    <% if @posts.any? %>
      <% @posts.each do |post| %>
        <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200">
          <p class="text-sm text-gray-800 mb-2"><%= post.content %></p>
          <%= link_to "💬 View Thread", post_path(post), class: "text-blue-600 text-sm hover:underline" %>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-500 text-sm">This user hasn't posted anything yet.</p>
    <% end %>
  </div>
</div>
