<div class="max-w-3xl mx-auto mt-10 px-4 space-y-6">
  <div class="flex justify-between items-center mb-4">
    <h1 class="text-2xl font-bold text-gray-800">All tho ret users</h1>
    <%= link_to "â† Back to feed", posts_path, class: "text-blue-600 hover:underline text-sm" %>
  </div>

  <div class="space-y-4">
    <% @users.each do |user| %>
      <div class="bg-white p-4 rounded-lg shadow-sm border border-gray-200 flex justify-between items-center">
        <div>
          <h2 class="text-lg font-semibold text-gray-800"><%= user.name %></h2>
          <p class="text-sm text-gray-600"><%= user.email %></p>
        </div>
        <div>
          <% if current_user.followed_user?(user) %>
            <%= button_to "Unfollow",
                user_follow_path(user, user_id: user.id),
                method: :delete,
                class: "bg-gray-200 text-gray-800 px-3 py-1 rounded hover:bg-gray-300 transition text-sm"
            %>
          <% else %>
            <%= button_to "Follow",
                user_follows_path(user),
                method: :post,
                class: "bg-blue-600 text-white px-3 py-1 rounded hover:bg-blue-700 transition text-sm"
            %>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
